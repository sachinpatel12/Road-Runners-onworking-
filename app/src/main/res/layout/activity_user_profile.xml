<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="#fece2f"
        android:padding="20dp">
        <ImageView
            android:id="@+id/userprofilepic"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/profile"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/userfullnametop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:textColor="#000000"
            android:layout_toRightOf="@id/userprofilepic"
            android:fontFamily="@font/aclonica"
            android:text="KARAN AHOOJA"
            android:includeFontPadding="false"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/userusernametop"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:includeFontPadding="false"
            android:layout_marginTop="5dp"
            android:textColor="#000000"
            android:layout_below="@+id/userfullnametop"
            android:layout_toRightOf="@+id/userprofilepic"
            android:text="karan_aj"
            android:textSize="20dp" />
    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="125dp"
        android:layout_marginTop="-60dp">

        <androidx.cardview.widget.CardView
        android:layout_height="125dp"
        android:layout_margin="10dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        app:cardBackgroundColor="#fece2f"
            android:elevation="60dp">

          <RelativeLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:padding="5dp">

            <ImageView
                android:layout_centerHorizontal="true"
                android:layout_height="30dp"
                android:layout_width="30dp"
                android:src="@drawable/payment" />

              <TextView
                  android:id="@+id/userbalance"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_centerInParent="true"
                  android:fontFamily="@font/acme"
                  android:includeFontPadding="false"
                  android:text="$123"
                  android:textSize="20sp" />


              <TextView

                  android:includeFontPadding="false"
                  android:layout_below="@id/userbalance"
                  android:layout_centerHorizontal="true"
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:text="Balance"
                  android:textSize="20sp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:layout_height="125dp"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            app:cardBackgroundColor="#fece2f"
            android:elevation="10dp">

            <RelativeLayout
                android:layout_height="match_parent"
                android:layout_width="match_parent"
                android:padding="5dp">

                <ImageView
                    android:layout_centerHorizontal="true"
                    android:layout_height="30dp"
                    android:layout_width="30dp"
                    android:src="@drawable/bookings" />

                <TextView
                    android:id="@+id/userBookings"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:fontFamily="@font/acme"
                    android:includeFontPadding="false"
                    android:text="12"
                    android:textSize="20sp" />


                <TextView

                    android:includeFontPadding="false"
                    android:layout_below="@id/userBookings"
                    android:layout_centerHorizontal="true"
                    android:layout_height="wrap_content"
                    android:layout_width="wrap_content"
                    android:text="Bookings"
                    android:textSize="20sp" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>

  </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="20dp">
        <com.google.android.material.textfield.TextInputLayout
            android:hint="User name"

            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/userupdatenamedown"
                android:drawableLeft="@drawable/person"
                android:drawablePadding="10dp"
                android:text="karan ahooja"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:hint="Mobile"

            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/userupdmobile"
                android:drawableLeft="@drawable/mobile"
                android:drawablePadding="10dp"
                android:text="9399976453"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:hint="G Mail"
            android:touchscreenBlocksFocus="true"
            android:focusableInTouchMode="false"
            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/userupdgmail"
                android:drawableLeft="@drawable/mail"
                android:drawablePadding="10dp"
                android:text="karan3452@gmail.com"
                android:focusableInTouchMode="false"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:hint="passworde"

            android:layout_height="wrap_content"
            android:layout_width="match_parent">

            <EditText
                android:id="@+id/userupdpassword"
                android:drawableLeft="@drawable/pass"
                android:drawablePadding="10dp"
                android:text="karan1234"
                android:layout_height="wrap_content"
                android:layout_width="match_parent" />

        </com.google.android.material.textfield.TextInputLayout>


        <Button
            android:id="@+id/userUpdate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="#fece2f"
            android:elevation="0dp"
            android:text="UPDATE"
            android:textSize="20dp"
            android:onClick="update"

            android:textColor="#000000"/>



    </LinearLayout>
    </LinearLayout>


</ScrollView>

